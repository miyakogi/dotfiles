" ============================================
"  Plugin settings  {{{
" ============================================

function! IsInstalled(name) abort
  if match(&runtimepath, 'dein') >= 0
    return !dein#check_install([a:name])
  else
    if match(&runtimepath, a:name) >= 0
      return 1
    endif
  endif
  return 0
endfunction

