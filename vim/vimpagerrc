set encoding=utf-8
scriptencoding utf-8

" should not load plugins
set noloadplugins

" set vimpager options
let g:vimpager_scrolloff=1

" keybindings
nnoremap <silent> gg :<C-u>1<CR>

" set style
colorscheme pencil

" transparent background
highlight Normal ctermbg=NONE

" go to first line
autocmd VimEnter * :1

" vim: set ft=vim:
