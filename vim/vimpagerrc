set encoding=utf-8
scriptencoding utf-8

" should not load plugins
" set noloadplugins

" set vimpager options
let g:vimpager_scrolloff=1

" keybindings
nnoremap <silent> gg :<C-u>1<CR>
nunmap <C-d>

" enable smart case search
set ignorecase
set smartcase

" Clear highlighting search word -> moved to
nnoremap <silent> <ESC><ESC> :<C-u>nohl<CR><C-l>
nnoremap <silent> <C-l> :<C-u>nohl<CR><C-l>

" go to first line at startup
autocmd VimEnter * :1

" forcibly disable cursorline
autocmd CursorMoved * set nocursorline

" set colorscheme
autocmd VimEnter * colorscheme onedark
autocmd VimEnter * highlight Normal ctermbg=NONE

" vim: set ft=vim:
