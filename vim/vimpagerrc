set encoding=utf-8
scriptencoding utf-8

" should not load plugins
" set noloadplugins

" set vimpager options
let g:vimpager_scrolloff=1

" keybindings
nnoremap <silent> gg :<C-u>1<CR>

" set style
colorscheme pencil

" transparent background
highlight Normal ctermbg=NONE

" set search highlight color 
" (`pencil` colorscheme does not highlight search)
highlight Search ctermbg=3 ctermfg=0

" go to first line at startup
autocmd VimEnter * :1

" forcibly disable cursorline
autocmd CursorMoved * set nocursorline

" vim: set ft=vim:
