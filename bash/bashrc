### Load local settings
test -f "${HOME}/.bashrc.local" && source "${HOME}/.bashrc.local"

### Prompt
# use startship only on graphical session
if [ -n "$DISPLAY" ] && type starship &>/dev/null; then
  eval "$(starship init bash)"
fi

