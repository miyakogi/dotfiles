# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+t exec "i3-msg layout toggle splith tabbed && i3-msg -t send_tick"
bindsym $mod+s exec "i3-msg layout stacking && i3-msg -t send_tick"
bindsym $mod+e exec "i3-msg layout toggle split && i3-msg -t send_tick"

# toggle tiling / floating
