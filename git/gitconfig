[core]
  quotepath = false
  editor = nvim
  excludesfile = ~/.gitignore_global
  preloadindex = true
  fscashe = true
  autoCRLF = false
  pager = delta
[include]
  path = ~/.gitconfig.local
[init]
  defaultBranch = "main"
[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
[interactive]
  diffFilter = delta --color-only
[add.interactive]
  useBuiltin = false
[delta]
  navigate = true
  features = side-by-side ansi clean-style
[delta "side-by-side"]
  side-by-side = true
[delta "ansi"]
  syntax-theme = ansi
[delta "clean-style"]
  line-numbers-left-format = "{nm:>4}│"
  line-numbers-right-format = "{np:>4}│"
  line-numbers-minus-style = "red normal"
  line-numbers-plus-style = "green normal"
  minus-style = "red normal"
  minus-emph-style = "red bold normal"
  plus-style = "green normal"
  plus-emph-style = "green bold normal"
[delta "signs"]
  keep-plus-minus-markers = true
[alias]
  clone-shallow = clone --depth=1
  hist = log --pretty=format:\"%C(magenta)%h%Creset %C(cyan)%ad%Creset - %s %C(dim)<%C(italic)%an%Creset%C(dim)>%Creset%C(yellow)%d%Creset\" --graph --date=short
  ffeature = flow feature
  fstart = flow feature start
  ffinish = flow feature finish
[merge]
  ff = false
  conflictstyle = diff3
[diff]
  tool = difftastic
  colorMoved = default
[difftool]
  prompt = false
[difftool "difftastic"]
  cmd = difft --display side-by-side-show-both "$LOCAL" "$REMOTE"
[pager]
  difftool = true
[push]
  default = simple
[pull]
  rebase = false
  ff = true

[url "github:"]
  pushInsteadOf = https://github.com/
  pushInsteadOf = git@github.com:

# vim: ft=conf
