[core]
  quotepath = false
  editor = nvim
  excludesfile = ~/.gitignore_global
  preloadindex = true
  fscashe = true
  autoCRLF = false
  pager = delta
[include]
  path = ~/.gitconfig.local
[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true
  side-by-side = true
  syntax-theme = ansi
[alias]
  clone-shallow = clone --depth=1
  hist = log --pretty=format:\"%C(magenta)%h%Creset %C(cyan)%ad%Creset - %s %C(dim)<%C(italic)%an%Creset%C(dim)>%Creset%C(yellow)%d%Creset\" --graph --date=short
  ffeature = flow feature
  fstart = flow feature start
  ffinish = flow feature finish
[merge]
  ff = false
  conflictstyle = diff3
[diff]
  tool = difftastic
  colorMoved = default
[difftool]
  prompt = false
[difftool "difftastic"]
  cmd = difft --display side-by-side-show-both "$LOCAL" "$REMOTE"
[pager]
  difftool = true
[push]
  default = simple
[pull]
  rebase = false
  ff = true

[url "github:"]
  pushInsteadOf = https://github.com/
  pushInsteadOf = git@github.com:

